{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hostingPlanName": {
            "defaultValue": "My app service plan name",
            "type": "String"
        },
        "sites_name": {
            "defaultValue": "My site name",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {            
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "B1",
                "tier": "Basic",
                "size": "B1",
                "family": "B",
                "capacity": 1
            },
            "name": "[parameters('hostingPlanName')]",
            "apiVersion": "2015-08-01",
            "location": "North Europe",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "numberOfWorkers": 1
            },
            "dependsOn": []
        },
        {         
            "type": "Microsoft.Web/sites",
            "name": "[parameters('sites_name')]",
            "apiVersion": "2015-08-01",
            "location": "North Europe",            
            "properties": {
                "name": "[parameters('sites_name')]",
                "hostNames": [
                    "[concat(parameters('sites_name'),'.azurewebsites.net')]"
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
            },
            "resources": [
            {
              "apiVersion": "2015-04-01",
              "name": "web",
              "type": "sourcecontrols",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites', parameters('sites_name'))]"
              ],
              "properties": {
                "RepoUrl": "https://github.com/HenrikWM/arm-workshop.git",
                "branch": "master",
                "IsManualIntegration": true
              }
            }],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
            ]
        }
    ]
}
